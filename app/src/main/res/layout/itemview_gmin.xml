<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/shape_itemview_gmin">

    <TextView
        android:id="@+id/tvDate_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="2022.06.17"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvContent_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="호텔 체크인 비용"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tvDate_Min"
        app:layout_constraintEnd_toStartOf="@+id/ivEdit_Min"
        app:layout_constraintTop_toTopOf="@+id/tvDate_Min"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvPay_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:text="174000"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/tvWon_Min"
        app:layout_constraintTop_toBottomOf="@+id/tvDate_Min" />

    <TextView
        android:id="@+id/tvWon_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="원"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tvPay_Min"
        app:layout_constraintEnd_toEndOf="@+id/tvContent_Min"
        app:layout_constraintTop_toBottomOf="@+id/tvContent_Min" />

    <ImageView
        android:id="@+id/ivDelete_Min"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delete_gmin" />

    <ImageView
        android:id="@+id/ivEdit_Min"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivDelete_Min"
        app:layout_constraintEnd_toStartOf="@+id/ivDelete_Min"
        app:layout_constraintTop_toTopOf="@+id/ivDelete_Min"
        app:srcCompat="@drawable/edit_gmin" />

</androidx.constraintlayout.widget.ConstraintLayout>