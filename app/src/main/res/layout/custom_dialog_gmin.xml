<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDialContent_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="내역 : "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvDialDate_Min"
        app:layout_constraintTop_toBottomOf="@+id/tvDialDate_Min" />

    <EditText
        android:id="@+id/edtContent_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tvDialContent_Min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDialContent_Min"
        app:layout_constraintTop_toTopOf="@+id/tvDialContent_Min"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tvDialPay_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="금액 : "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@+id/tvDialContent_Min"
        app:layout_constraintTop_toBottomOf="@+id/tvDialContent_Min" />

    <EditText
        android:id="@+id/edtPay_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/tvDialPay_Min"
        app:layout_constraintEnd_toEndOf="@+id/edtContent_Min"
        app:layout_constraintStart_toStartOf="@+id/edtContent_Min"
        app:layout_constraintTop_toTopOf="@+id/tvDialPay_Min"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnDialEnter"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#9EC6D8"
        android:text="확인"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPay_Min"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnDialExit"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#9EC6D8"
        android:text="취소"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnDialEnter"
        app:layout_constraintEnd_toStartOf="@+id/btnDialEnter"
        app:layout_constraintTop_toTopOf="@+id/btnDialEnter"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tvDialDate_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="날짜 : "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtDate_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:inputType="datetime"
        app:layout_constraintBottom_toBottomOf="@+id/tvDialDate_Min"
        app:layout_constraintEnd_toEndOf="@+id/edtContent_Min"
        app:layout_constraintStart_toStartOf="@+id/edtContent_Min"
        app:layout_constraintTop_toTopOf="@+id/tvDialDate_Min"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>